<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/cv_card" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="8dp" app:cardUseCompatPadding="true">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/ll_parent" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <androidx.cardview.widget.CardView android:layout_width="100dp" android:layout_height="100dp" android:layout_margin="2dp" app:cardBackgroundColor="#ffffff" app:cardCornerRadius="20dp">
                    <ImageView android:layout_gravity="center" android:id="@+id/ivMenu" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/butter" android:adjustViewBounds="true" android:resizeMode="none|horizontal|vertical"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:focusable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:layout_marginStart="5dp">
                <TextView android:textSize="14sp" android:textStyle="bold" android:textColor="@color/colortext" android:layout_gravity="start" android:id="@+id/tv_pTitle" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="Product Title" android:inputType="textMultiLine" android:fontFamily="@font/oswald" android:layout_marginEnd="5dp"/>
                <LinearLayout android:orientation="horizontal" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
                    <TextView android:textSize="14dp" android:textColor="@color/gray" android:gravity="start" android:id="@+id/tv_mrp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MRP ₹ 60.00" android:fontFamily="@font/oswald"/>
                    <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/colorGreen" android:gravity="start" android:id="@+id/tv_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="₹ 48.00" android:fontFamily="@font/oswald" android:layout_marginStart="10dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                    <RelativeLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/weight_rel" android:layout_width="0dp" android:layout_height="35dp" android:layout_weight="1">
                        <TextView android:textStyle="bold" android:gravity="center_vertical" android:id="@+id/ms_weight" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginStart="10dp"/>
                        <ImageView android:id="@+id/ms_weight_img" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_drop_down_black_24dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <LinearLayout android:gravity="center" android:layout_gravity="center" android:id="@+id/llay_maincart" android:background="@color/colorWhite" android:visibility="visible" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                        <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/colorGreen" android:id="@+id/stack" android:padding="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:fontFamily="@font/oswald"/>
                        <LinearLayout android:orientation="horizontal" android:id="@+id/llay_cart" android:layout_width="100dp" android:layout_height="wrap_content">
                            <TextView android:textStyle="bold" android:textColor="@color/colorWhite" android:id="@+id/tv_minus" android:background="@drawable/button_oval_primary_radius_left_home" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="-" android:layout_weight="1" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:fontFamily="@font/oswald" android:textAlignment="center"/>
                            <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:id="@+id/tv_qty" android:background="@drawable/button_oval_accent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="1" android:layout_weight="1" android:layout_alignParentTop="true" android:fontFamily="@font/oswald" android:textAlignment="center"/>
                            <TextView android:textStyle="bold" android:textColor="@color/colorWhite" android:id="@+id/tv_add1" android:background="@drawable/button_oval_accent_radius" android:padding="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="ADD" android:layout_alignParentTop="true" android:textAllCaps="false" android:fontFamily="@font/oswald" android:textAlignment="center"/>
                            <TextView android:textStyle="bold" android:textColor="@color/colorWhite" android:id="@+id/tv_plus" android:background="@drawable/button_oval_primary_radius_right_home" android:padding="8dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="+" android:layout_weight="1" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:fontFamily="@font/oswald" android:textAlignment="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/red" android:layout_gravity="start" android:id="@+id/tv_wid" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="wid" android:fontFamily="@font/oswald"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:layout_gravity="start" android:id="@+id/tv_pId" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="pid" android:fontFamily="@font/oswald"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout android:layout_gravity="start" android:id="@+id/fl_offer" android:background="@drawable/circle" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp">
            <TextView android:textSize="10dp" android:textColor="@color/colorWhite" android:id="@+id/tv_offer" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="5 % \10 OFF" android:fontFamily="@font/oswald" android:textAlignment="center"/>
        </FrameLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>
