<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ImageView android:id="@+id/refer_img" android:layout_width="match_parent" android:layout_height="300dp" android:src="@drawable/refer" android:layout_below="@+id/toolbar"/>
    <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="#000000" android:id="@+id/refer_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Refer your Friends , Earn cashback" android:layout_below="@+id/refer_img" android:fontFamily="@font/basic_regular" android:textAlignment="center"/>
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/lin" android:background="@drawable/refer_lin_border" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/refer_text" android:layout_centerHorizontal="true">
        <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/refer_code" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/basic_regular"/>
    </LinearLayout>
    <TextView android:textSize="20sp" android:textColor="#000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="invite your friends to join Farm Veggies and get Cashback for each friend that joiins using your referral code" android:layout_below="@+id/lin" android:fontFamily="@font/basic_regular" android:textAlignment="center" android:layout_marginStart="5dp" android:layout_marginEnd="5dp"/>
    <Button android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorWhite" android:layout_gravity="center" android:id="@+id/btn_refer" android:background="@drawable/border_button" android:layout_width="250dp" android:layout_height="50dp" android:layout_margin="10dp" android:text="INVITE NOW" android:layout_below="@+id/show" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:textAllCaps="false" android:fontFamily="@font/oswald"/>
</RelativeLayout>
