        <Button android:textSize="20dp" android:textStyle="bold" android:textColor="@color/colorWhite" android:layout_gravity="center" android:id="@+id/sub_btn" android:background="@drawable/border_button" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="Submit" android:fontFamily="@font/oswald"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
