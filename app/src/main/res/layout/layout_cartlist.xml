<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/cv_card" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="5dp" app:cardUseCompatPadding="true">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/ll_parent" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:id="@+id/ivMenu" android:layout_width="0dp" android:layout_height="100dp" android:src="@drawable/dummy" android:adjustViewBounds="true" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.5" android:layout_marginStart="10dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colortext" android:id="@+id/tv_pTitle" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Product Title" android:layout_weight="2" android:inputType="textMultiLine" android:fontFamily="@font/oswald"/>
                <ImageView android:layout_gravity="end" android:id="@+id/iv_delete" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_delete_black_24dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="14dp" android:textColor="@color/colortext" android:layout_gravity="start" android:id="@+id/tv_wgt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="gm" android:fontFamily="@font/oswald" android:layout_marginStart="5dp"/>
                    <TextView android:textSize="14dp" android:textColor="@color/colortext" android:layout_gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="x" android:fontFamily="@font/oswald" android:layout_marginStart="5dp"/>
                    <TextView android:textSize="8dp" android:textColor="@color/colortext" android:layout_gravity="start" android:id="@+id/tv_pqyt" android:background="@drawable/border_cart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1" android:fontFamily="@font/oswald" android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorTextBlack" android:gravity="start" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="₹ "/>
                <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/colorTextBlack" android:gravity="start" android:id="@+id/tv_pPrice" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="50" android:fontFamily="@font/oswald"/>
                <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:layout_gravity="start" android:orientation="horizontal" android:id="@+id/llay_cart" android:layout_width="100dp" android:layout_height="wrap_content">
                        <TextView android:textStyle="bold" android:textColor="@color/colorWhite" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_minus" android:background="@drawable/button_oval_primary_radius_left_home" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="-" android:layout_weight="1" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:fontFamily="@font/oswald"/>
                        <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_qty" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="1" android:layout_weight="1" android:layout_alignParentTop="true" android:fontFamily="@font/oswald" android:textAlignment="center"/>
                        <RelativeLayout android:orientation="horizontal" android:id="@+id/rel_add" android:background="@drawable/button_oval_accent_radius" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textStyle="bold" android:textColor="@color/colorWhite" android:gravity="center_horizontal" android:id="@+id/tv_add1" android:visibility="visible" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="ADD" android:layout_alignParentTop="true" android:textAllCaps="false" android:fontFamily="@font/oswald" android:textAlignment="center"/>
                            <TextView android:textSize="23dp" android:textColor="@color/white" android:background="@color/colorBlackTrans" android:layout_width="25dp" android:layout_height="wrap_content" android:text="+" android:layout_alignParentEnd="true"/>
                        </RelativeLayout>
                        <TextView android:textStyle="bold" android:textColor="@color/colorWhite" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_plus" android:background="@drawable/button_oval_primary_radius_right_home" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="+" android:layout_weight="1" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:fontFamily="@font/oswald"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colortext" android:layout_gravity="start" android:id="@+id/tv_delivery" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Delivery Fee: ₹40" android:fontFamily="@font/oswald"/>
            <TextView android:textSize="23dp" android:textColor="@color/white" android:id="@+id/ms_weight" android:background="@color/colorBlackTrans" android:visibility="gone" android:layout_width="25dp" android:layout_height="wrap_content" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="23dp" android:textColor="@color/white" android:id="@+id/tv_wid" android:background="@color/colorBlackTrans" android:visibility="gone" android:layout_width="25dp" android:layout_height="wrap_content" android:layout_alignParentEnd="true"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/red" android:layout_gravity="start" android:id="@+id/tv_pId" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="cartid" android:fontFamily="@font/oswald"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/red" android:layout_gravity="start" android:id="@+id/pId" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="cartid" android:fontFamily="@font/oswald"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/colorGrayLight" android:layout_width="match_parent" android:layout_height="1.5dp" android:layout_marginTop="10dp"/>
</LinearLayout>
