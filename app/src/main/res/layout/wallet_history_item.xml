<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/cv_card" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="5dp" app:cardUseCompatPadding="true">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/ll_parent" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.5">
            <ImageView android:layout_gravity="center" android:id="@+id/ivMenu" android:layout_width="0dp" android:layout_height="50dp" android:src="@drawable/withdrawal" android:adjustViewBounds="true" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.5" android:layout_marginStart="10dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colortext" android:id="@+id/transfer_id" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Product Title" android:layout_weight="2" android:inputType="textMultiLine" android:fontFamily="@font/oswald"/>
                <TextView android:textColor="@color/white" android:id="@+id/amount" android:background="@drawable/text_border_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="amount" android:layout_marginEnd="3dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="2">
                    <TextView android:textSize="14dp" android:textColor="@color/colortext" android:layout_gravity="start" android:id="@+id/comments" android:layout_width="0dp" android:layout_height="wrap_content" android:text="gm" android:layout_weight="1" android:fontFamily="@font/oswald" android:layout_marginStart="5dp"/>
                    <TextView android:textSize="14dp" android:textColor="@color/colortext" android:layout_gravity="start" android:id="@+id/created_at" android:layout_width="0dp" android:layout_height="wrap_content" android:text="x" android:layout_weight="1" android:fontFamily="@font/oswald" android:textAlignment="textEnd" android:layout_marginStart="5dp" android:layout_marginEnd="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/colorGrayLight" android:layout_width="match_parent" android:layout_height="1.5dp" android:layout_marginTop="10dp"/>
</LinearLayout>
