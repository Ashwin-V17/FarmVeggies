<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/colorWhite" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:id="@+id/iv_profile" android:layout_width="80dp" android:layout_height="80dp" android:layout_margin="20dp" android:src="@drawable/logo"/>
            <View android:background="@color/colorBlackTrans" android:layout_width="match_parent" android:layout_height="2dp"/>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/border_blue" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
                <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Name" android:layout_weight="0.6" android:fontFamily="@font/oswald"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorTextBlack" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text=":" android:layout_weight="0.2" android:fontFamily="@font/oswald"/>
                <EditText android:textSize="13sp" android:textColor="@color/colorTextBlack" android:layout_gravity="center_vertical" android:id="@+id/et_cname" android:background="@android:color/transparent" android:focusableInTouchMode="true" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Name" android:layout_weight="1" android:inputType="textPersonName" android:fontFamily="@font/oswald"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/border_blue" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
                <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Mobile Number" android:layout_weight="0.6" android:inputType="textMultiLine" android:fontFamily="@font/oswald"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorTextBlack" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text=":" android:layout_weight="0.2" android:fontFamily="@font/oswald"/>
                <EditText android:textSize="13sp" android:textColor="@color/colorTextBlack" android:layout_gravity="center_vertical" android:id="@+id/et_cphone" android:background="@android:color/transparent" android:focusable="false" android:focusableInTouchMode="true" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Mobile Number" android:maxLength="13" android:layout_weight="1" android:inputType="phone" android:fontFamily="@font/oswald"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/border_blue" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
                <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Email Address" android:layout_weight="0.6" android:fontFamily="@font/oswald"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorTextBlack" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text=":" android:layout_weight="0.2" android:fontFamily="@font/oswald"/>
                <EditText android:textSize="13sp" android:textColor="@color/colorTextBlack" android:layout_gravity="center_vertical" android:id="@+id/et_cemail" android:background="@android:color/transparent" android:focusableInTouchMode="true" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Email Address" android:layout_weight="1" android:inputType="textMultiLine" android:fontFamily="@font/oswald"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/border_blue" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
                <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:layout_width="0dp" android:layout_height="wrap_content" android:text="DOB" android:layout_weight="0.6" android:fontFamily="@font/oswald"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorTextBlack" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text=":" android:layout_weight="0.2" android:fontFamily="@font/oswald"/>
                <EditText android:textSize="13sp" android:textColor="@color/colorTextBlack" android:id="@+id/edt_dob" android:background="@android:color/transparent" android:focusable="false" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="DOB" android:singleLine="false" android:layout_weight="1" android:inputType="textMultiLine" android:fontFamily="@font/oswald"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:background="@drawable/border_blue" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginStart="20dp" android:layout_marginEnd="20dp">
                <TextView android:textStyle="bold" android:textColor="@color/colorPrimary" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Address" android:layout_weight="0.6" android:fontFamily="@font/oswald"/>
                <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorTextBlack" android:layout_gravity="center_vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:text=":" android:layout_weight="0.2" android:fontFamily="@font/oswald"/>
                <EditText android:textSize="13sp" android:textColor="@color/colorTextBlack" android:layout_gravity="center_vertical" android:id="@+id/edt_caddress" android:background="@android:color/transparent" android:focusableInTouchMode="true" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Address" android:layout_weight="1" android:inputType="textMultiLine" android:fontFamily="@font/oswald"/>
            </LinearLayout>
            <TextView android:textSize="16sp" android:textColor="@color/colorGreen" android:layout_gravity="end" android:id="@+id/tv_currentlocation" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Get current location" android:fontFamily="@font/oswald" android:layout_marginEnd="30dp"/>
            <Button android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorWhite" android:layout_gravity="center" android:id="@+id/update_btn" android:background="@drawable/border_button" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_margin="20dp" android:text="Update" android:textAllCaps="false" android:fontFamily="@font/oswald"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
