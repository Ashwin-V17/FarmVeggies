<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/iv_logo" android:visibility="visible" android:layout_width="150dp" android:layout_height="80dp" android:src="@drawable/logo"/>
            <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/colorPrimaryDark" android:layout_gravity="center" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:fontFamily="@font/oswald"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp">
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/colorTextBlack" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Lost your password" android:fontFamily="@font/oswald" android:textAlignment="center" android:layout_marginStart="5dp"/>
            <EditText android:textSize="15sp" android:textColor="@color/colorTextBlack" android:id="@+id/txt_mobile" android:background="@drawable/border_blue" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="10dp" android:hint="Enter your register number" android:drawableRight="@drawable/ic_phone_iphone_black_24dp" android:fontFamily="@font/oswald"/>
            <EditText android:textSize="15sp" android:textColor="@color/colorTextBlack" android:id="@+id/new_pass" android:background="@drawable/border_blue" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="10dp" android:hint="New Password" android:drawableRight="@drawable/lock" android:inputType="textPassword" android:fontFamily="@font/oswald"/>
            <EditText android:textSize="15sp" android:textColor="@color/colorTextBlack" android:id="@+id/confirm" android:background="@drawable/border_blue" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="50dp" android:layout_margin="10dp" android:hint="Confirm Password" android:drawableRight="@drawable/lock" android:inputType="textPassword" android:fontFamily="@font/oswald"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/colorGreen" android:gravity="end" android:id="@+id/show" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Show" android:fontFamily="@font/oswald" android:textAlignment="textEnd" android:layout_marginEnd="20dp"/>
            <Button android:textSize="18sp" android:textStyle="bold" android:textColor="@color/colorWhite" android:layout_gravity="center" android:id="@+id/btn_login" android:background="@drawable/border_button" android:layout_width="150dp" android:layout_height="50dp" android:layout_margin="10dp" android:text="Save" android:layout_below="@+id/ll_phno" android:layout_centerHorizontal="true" android:textAllCaps="false" android:fontFamily="@font/oswald"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
